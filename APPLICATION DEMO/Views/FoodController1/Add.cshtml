@using APPLICATION_DEMO.ViewModels
@model IEnumerable<APPLICATION_DEMO.DAL.Models.Food>

<h2 class="text-center mb-5">List Of Foods</h2>

<div class="row mb-5">
    <div class="col"></div>
    <a class="btn btn-primary" asp-controller="Food" asp-action="Create">New Food</a>
    <div class="col"></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Short Description</th>
            <th scope="col">Long Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model)
        {
            <tr>
                <th scope="row">@food.FoodID</th>
                <td>@food.Name</td>
                <td>@food.SDescription</td>
                <td>@food.LDescription</td>
                <td>@food.Price$</td>
                <td><img src="/Images/@food.imageUrl" width="100" /></td>
                <td>@food.Category?.Name</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="FoodController1" asp-action="Update" asp-route-id="@food.FoodID">Update</a>
                    <a class="btn btn-danger btn-sm" asp-controller="FoodController1" asp-action="Delete" asp-route-id="@food.FoodID">Delete</a>
                </td>
                <td>  <a class="btn btn-outline-secondary btn-sm" asp-controller="FoodController1" asp-action="GetByID" asp-route-id="@food.FoodID">Details</a></td>
            </tr>
        }
    </tbody>
</table>
