<!-- Path: Views/Shared/Components/CategoryMenu/Default.cshtml -->
@model IEnumerable<Category>
<li class="dropdown">
    <a asp-controller="Food" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">Foods><b class="caret"></b></a>
<ul class="dropdown-menu">
    @foreach (var category in Model)
    {
        <li>
                <a class="dropdown-item" asp-controller="Food" asp-action="List" asp-route-category="@category.Name">@category.Name</a>
        </li>
    }
    <li class="dropdown-divider"></li>
    <li>
        <a class="dropdown-item" asp-controller="Food" asp-action="List">View All Food</a>
    </li>
</ul>
</li>