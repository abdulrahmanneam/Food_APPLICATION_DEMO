@model Food
<div class="col-sm-4 col-lg-4 col-md-6 mb-4">
    <div class="card h-100 shadow-sm border-0">
        <!-- Food Image -->
        <img src="@Url.Content("~/Images/" + Model.ImageTUrl)" class="card-img-top img-fluid" alt="@Model.Name" style="max-height: 200px; object-fit: cover;" />

        <!-- Card Body -->
        <div class="card-body d-flex flex-column">
            <!-- Food Name -->
            <h5 class="card-title text-primary text-center">
                <a href="#" class="text-decoration-none text-dark">@Model.Name</a>
            </h5>

            <!-- Food Price -->
            <h6 class="card-subtitle mb-2 text-muted text-center">@Model.Price.ToString("c")</h6>

            <!-- Food Short Description -->
            <p class="card-text text-center">@Model.SDescription</p>

            <!-- View Details Button -->
            <div class="d-flex justify-content-center">
                <a class="btn btn-outline-primary btn-sm" asp-controller="FoodController1" asp-action="GetByID" asp-route-id="@Model.FoodID">
                    View Details
                </a>
            </div>
        </div>

        <!-- Add to Cart Button -->
        <div class="card-footer bg-transparent border-0 d-flex justify-content-center mt-auto">
            <a class="btn btn-success w-100" asp-controller="SalesCart" asp-action="addtosalescart" asp-route-foodId="@Model.FoodID">
                Add to Cart
            </a>
        </div>
    </div>
</div>



